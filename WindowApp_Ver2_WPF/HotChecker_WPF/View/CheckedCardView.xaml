<UserControl x:Class="HotChecker_WPF.View.CheckedCardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotChecker_WPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
            <RowDefinition Height="0.33*"/>
        </Grid.RowDefinitions>
        <Viewbox>
            <TextBlock Text="{Binding Name}" Style="{StaticResource tbDefaultStyle}" FontSize="30" TextWrapping="Wrap" />
        </Viewbox>
        <Viewbox  Grid.Row="1">
            <TextBlock Text="{Binding Count}" Style="{StaticResource tbDefaultStyle}" FontSize="25" TextWrapping="Wrap" />
        </Viewbox>
        <Viewbox  Grid.Row="2">
            <TextBlock Text="{Binding ClassRoomNumber}" Style="{StaticResource tbDefaultStyle}" FontSize="25" TextWrapping="Wrap" />
        </Viewbox>

    </Grid>
</UserControl>
